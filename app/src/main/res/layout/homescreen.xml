<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="860px"
        android:layout_height="match_parent"
        tools:context=".MapsActivity"
        android:background="#FFFFFF"
        android:layout_gravity="start"
        tools:ignore="PxUsage">

        <fragment xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/map"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            tools:context="com.team17.mapslauncher.MapsActivity" />

        <android.support.v7.widget.CardView
            android:layout_alignParentBottom="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="192px"
            android:layout_marginRight="192px"
            android:layout_marginBottom="16px"
            android:layout_marginTop="16px"
            android:layout_centerInParent="true"
            android:id="@+id/cardView">

            <fragment
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:name="com.team17.mapslauncher.AppsGridFragment"
                android:id="@+id/apps_grid" />

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="550dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_medium"
            android:layout_marginBottom="@dimen/margin_medium"
            android:layout_marginLeft="@dimen/margin_medium"
            android:layout_marginRight="@dimen/margin_medium"
            android:id="@+id/cardView3">

            <fragment
                android:id="@+id/autocomplete_fragment"
                android:name="com.google.android.gms.location.places.ui.PlaceAutocompleteFragment"
                android:layout_width="552dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true" />

        </android.support.v7.widget.CardView>

    </RelativeLayout>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="282dp"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:background="@color/cardview_dark_background"
        tools:context=".MapsActivity"
        tools:ignore="PxUsage">

        <LinearLayout
            android:id="@+id/speed_widget"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/music_widget"
            android:background="@color/cardview_dark_background"
            android:orientation="vertical"></LinearLayout>

        <LinearLayout
            android:id="@+id/music_widget"
            android:layout_width="match_parent"
            android:layout_height="190px"
            android:layout_above="@id/weather_widget"
            android:background="@color/cardview_dark_background"
            android:orientation="vertical"></LinearLayout>

        <LinearLayout
            android:id="@+id/weather_widget"
            android:layout_width="match_parent"
            android:layout_height="280px"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:background="@color/cardview_dark_background"
            android:orientation="vertical"></LinearLayout>

    </RelativeLayout>

</LinearLayout>